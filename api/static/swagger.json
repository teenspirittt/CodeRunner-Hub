{
  "openapi": "3.0.0",
  "info": {
    "title": "CodeRunner Hub API",
    "version": "1.0.0",
    "description": "API for CodeRunner Hub"
  },
  "paths": {
    "/codes/execute": {
      "post": {
        "summary": "Execute code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExecuteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Code executed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExecuteResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid JSON data"
          },
          "500": {
            "description": "Failed to execute code"
          }
        }
      }
    },
    "/codes/{appointmentId}": {
      "get": {
        "summary": "Get code by appointment ID",
        "parameters": [
          {
            "name": "appointmentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Code retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetCodeResponse"
                }
              }
            }
          },
          "404": {
            "description": "Appointment not found"
          },
          "500": {
            "description": "Failed to retrieve code"
          }
        }
      }
    },
    "/codes": {
      "get": {
        "summary": "Get all codes",
        "responses": {
          "200": {
            "description": "Codes retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllCodesResponse"
                }
              }
            }
          },
          "500": {
            "description": "Failed to retrieve codes"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ExecuteRequest": {
        "type": "object",
        "properties": {
          "appointmentId": {
            "type": "integer"
          },
          "language": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "funcName": {
            "type": "string"
          }
        },
        "required": [
          "appointmentId",
          "language",
          "code",
          "funcName"
        ]
      },
      "ExecuteResponse": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string"
          }
        }
      },
      "GetCodeResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          }
        }
      },
      "GetAllCodesResponse": {
        "type": "object",
        "properties": {
          "codes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}